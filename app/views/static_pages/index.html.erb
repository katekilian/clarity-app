
<section class="landing-section-hero">
  <div class="container">
    <div class="landing-hero">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1>Clarityyyyyyy</h1>
          <p class="lead">a journaling app that helps you figure out how you're feeling and what you need</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="landing-section-1">
  <div class="container">
    <div class="landing-1">
      <div class="row">
        <div class="col-lg-12 text-center">
          <p class="lead">It uses a communication technology known as <span>Non-Violent Communication</span>,</p>
          <p class="lead">as well as traditional journaling, to help sort yourself out.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="landing-section-2">
  <div class="container">
    <div class="landing-2">
      <div class="row">
        <div class="col-lg-12 text-center">

          <h1>Try it out today!</h1>

          <button name="button" class="btn btn-sign-up">Sign Up</button>
            <div class="row">
            <div class="sign-up-form">
              <div class="well col-md-offset-4 col-md-4">
                <%= form_for @user, url: sign_up_path do |f| %>
                  <div class="form-group">
                    <%= f.label :email, class: 'control-label' %>
                    <%= f.text_field :email, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password, class: 'control-label' %>
                    <%= f.password_field :password, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password_confirmation, class: 'control-label' %>
                    <%= f.password_field :password_confirmation, class: 'form-control' %>
                  </div>
                  <%= f.submit "Create an Account", class: 'btn btn-submit' %>
                <% end %>
              </div>
            </div>  <!-- sign up form -->
          </div> <!-- row -->

          <p class="text-lighten">Already have an account?</p>
          <div class="row">
            <div class="login-form">
              <div class="well col-md-offset-4 col-md-4">
                <%= form_tag sign_in_path do %>
                  <div class="form-group">
                    <%= label_tag :email %>
                    <%= email_field_tag :email, nil, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= label_tag :password %>
                    <%= password_field_tag :password, nil, class: 'form-control' %>
                  </div>
                  <div class="row">
                    <%= submit_tag "Log In", class: 'btn btn-submit' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</section>
